doctype html
html
    head
        title Medical Store App
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
    body
    body
        .container
            br
            br
            br
            != messages('message', locals)
            if errors
                each error in errors
                    div(class='alert alert-danger') #{error.msg}       
            h1 Register
            form(method='POST', action='/user/register')
                .form-group
                    label(for='name') Name
                    input.form-control(name='name', type='text', id='name')
                .form-group
                    label(for='username') Username
                    input.form-control(name='username', type='text', id='username')
                .form-group
                    label(for='password') Password
                    input.form-control(name='password', type='password', id='password')
                br
                button.btn.btn-primary(type='submit') Sign Up
            br    
            a(href="/user/login") Already have an account? Sign In   
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='/bootstrap/js/bootstrap.js')   